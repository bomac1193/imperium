{
  "name": "imperium-royalty-platform",
  "version": "1.0.0",
  "description": "Imperium - Music Royalty Platform. Own It. Break the Chain.",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "node": "hardhat node",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run node\" \"npm run frontend\" \"npm run backend\"",
    "lint": "solhint 'contracts/**/*.sol'",
    "coverage": "hardhat coverage"
  },
  "keywords": [
    "music",
    "royalty",
    "blockchain",
    "polygon",
    "nft",
    "defi"
  ],
  "author": "Imperium",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0"
  }
}
